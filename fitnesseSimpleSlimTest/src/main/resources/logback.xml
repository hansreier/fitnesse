<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <!-- local log file configuration -->
    <property value="/git/fitnesseLogs" name="LOG_DIR"/>

    <!-- APPLICATION LOGS -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%date{ISO8601} SEVERITY="%-5level" ORIGIN="%logger{60}" MESSAGE="%message"%n</pattern>
        </encoder>
    </appender>
    <appender name="APPLICATION" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/MyLog.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <maxIndex>5</maxIndex>
            <fileNamePattern>${LOG_DIR}/MyLog.%i</fileNamePattern>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%date{ISO8601} SEVERITY="%-5level" ORIGIN="%logger{60}" MESSAGE="%message"%n</pattern>
        </encoder>
    </appender>

    <logger name="decisionTable" level="INFO"/>

    <root level="ERROR">
        <appender-ref ref="APPLICATION"/>
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>